{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "name": "challenge-of-the-day",
    "labels": {
      "app": "challenge-of-the-day",
      "version": "v1"
    }
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "challenge-of-the-day"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "challenge-of-the-day"
        }
      },
      "spec": {
        "containers": [
          {
            "name": "application",
            "image": "gcr.io/hartonline-cloud/challenge-of-the-day:(TRAVIS_COMMIT)",
            "resources": {
              "limits": {
                "cpu": ".05",
                "memory": "50Mi"
              }
            },
            "env": [
              {
                "name": "twitterConsumerKey",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "challenge-of-the-day-secret",
                    "key": "twitterConsumerKey"
                  }
                }
              },
              {
                "name": "twitterConsumerSecret",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "challenge-of-the-day-secret",
                    "key": "twitterConsumerSecret"
                  }
                }
              },
              {
                "name": "twitterAccessToken",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "challenge-of-the-day-secret",
                    "key": "twitterAccessToken"
                  }
                }
              },
              {
                "name": "twitterAccessTokenSecret",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "challenge-of-the-day-secret",
                    "key": "twitterAccessTokenSecret"
                  }
                }
              },
              {
                "name": "slackUrl",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "challenge-of-the-day-secret",
                    "key": "slackUrl"
                  }
                }
              }
            ]
          }
        ]
      }
    }
  }
}
