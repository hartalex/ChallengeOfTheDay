{
  "name": "challengeoftheday",
  "version": "1.0.0",
  "description": "Theme generator for the #challenges channel of the MadisonGameDev Slack Group",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "clean": "rimraf build",
    "build": "npm run clean && babel src -d build/src && babel index.js -d build/",
    "lint": "eslint index.js test/** src/**",
    "start": "node index.js",
    "cleanOldContainers": "node scripts/cleanOldContainers.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hartalex/ChallengeOfTheDay.git"
  },
  "author": "Alex Hart",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/hartalex/ChallengeOfTheDay/issues"
  },
  "homepage": "https://github.com/hartalex/ChallengeOfTheDay#readme",
  "devDependencies": {
    "@babel/cli": "7.8.4",
    "@babel/core": "7.8.4",
    "@babel/preset-env": "7.8.4",
    "codeclimate-test-reporter": "0.5.1",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-jest": "23.7.0",
    "eslint-plugin-jsdoc": "21.0.0",
    "jest": "25.1.0",
    "rimraf": "3.0.2"
  },
  "dependencies": {
    "request": "2.88.2",
    "twit": "2.2.11"
  },
  "jest": {
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 95,
        "statements": 95,
        "branches": 95,
        "functions": 100
      }
    }
  }
}
